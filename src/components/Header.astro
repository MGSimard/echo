---
import HeaderLink from "@/components/HeaderLink.astro";
import { TableOfContents } from "@lucide/astro";

// TODO: Consideration
// https://developer.chrome.com/docs/css-ui/sticky-headers
type Props = {
  currentTitle?: string;
  currentHref?: string;
};

const { currentTitle } = Astro.props as Props;
---

<header id="nav-wrapper">
  <nav id="primary-nav">
    <ul>
      <li>
        <HeaderLink href="/" aria-label="Home">HOME</HeaderLink>
      </li>
      <li>
        <HeaderLink href="/echoes">ECHOES</HeaderLink>
      </li>
      {
        currentTitle && (
          <Fragment>
            <li class="breadcrumb-sep" aria-hidden="true">
              /
            </li>
            <li class="breadcrumb-current">
              <span class="active" aria-current="page" title={currentTitle}>
                {currentTitle}
              </span>
            </li>
          </Fragment>
        )
      }
      <li class="toc-nav-btn">
        <label
          for="toc-toggle"
          class="toc-nav-toggle"
          aria-controls="toc"
          aria-expanded="false"
          aria-haspopup="dialog"
          aria-label="Open table of contents"
          role="button"
          tabindex="0">
          <TableOfContents aria-hidden="true" />
          <span class="sr-only">Contents</span>
        </label>
      </li>
    </ul>
  </nav>
</header>
